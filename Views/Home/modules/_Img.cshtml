@using MailGenerator.ViewModels.Shared
@model Img

<table cellpadding="0" cellspacing="0" style="width:100%">
    <tbody>
        <tr>
            <td align="@Model.Align" style="font-size: 0; padding: @Model.Padding">
                    <a href="@Model.Href" style="text-decoration: none; color: #ffffff;">
                        <img width="@Model.Width" height="@Model.Height" src="@Model.Src" alt="@Model.Alt">
                    </a>
                @if (Model.Desc != null)
                {
                    <span style="font-size: 13px; padding: 0 10px; color: #777"><i>@Model.Desc</i></span>
                }
            </td>
        </tr>
    </tbody>
</table>

@using MailGenerator.ViewModels.Shared
@model Button


@{ 
    var size = 10;
    if (@Model.Size == "Small") { size = 5; }
    if (@Model.Size == "Medium") { size = 10; }
    if (@Model.Size == "Big") { size = 15; }
}

<table cellpadding="0" cellspacing="0" border="0" style="width:100%">
    <tbody>
        <tr>
            <td style="padding: 0 @Model.Padding @Model.Padding">
                <table cellpadding="0" cellspacing="0" border="0" align="@Model.Align">
                    <tr>
                        <td bgcolor="@Model.Bg_color" style="@String.Format("padding:{0}px {1}px;", size, size * 2);" align="center">
                            <a href="@Model.Href" target="_blank" style="text-decoration: none; display: block;"><span style="color: @Model.Color">@Html.Raw(Model.Text)</span></a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </tbody>
</table>

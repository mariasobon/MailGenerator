@using MailGenerator.ViewModels.Shared
@model Change


@{
    var Trend = "";
    if (Model.Value == "UP"){
    Trend = "<span style='color:#67AE3E'>▲</span>";
    }
    else if (Model.Value == "DOWN"){
        Trend = "<span style='color:#FF0000'>▼</span>";
    }
    else if (Model.Value == "CONST"){
        Trend = "<span style='color:#B1B1B1'>■</span>";
    }
}

<span style="display:inline-block; font-size: .8em;">(@Model.Text @Html.Raw(Trend))</span>
@using MailGenerator.ViewModels.Shared
@model Title

@{
    var Subtitle = !string.IsNullOrEmpty(Model.Subtitle) ? string.Format("<span style='font-size: .8em'>{0}</span>", Model.Subtitle) : null;
    
} 

<table cellpadding="0" cellspacing="0" style="width: 100%">
    <tbody>
        <tr>
            <td style="padding: 0 10px;">
                <table cellpadding="0" cellspacing="0" style="width: 100%">
                    <tbody>
                        <tr>
                            <td style="border-bottom: 1px solid #D2D2D2;">
                                <h2 style="color: #444; font-weight: normal; margin: 5px 0; font-family:&quot;Segoe UI&quot, Roboto, Helvetica, Arial, sans-serif;">
                                    @if (@Model.Status == "BAD")
                                    {
                                        <span style="font-weight: normal; color: #ff0000">●</span>
                                    }
                                    else if (@Model.Status == "GOOD")
                                    {
                                        <span style="font-weight: normal; color: #67AE3E">●</span>
                                    }
                                    @Model.Text
                                    @Html.Raw(Subtitle)
                                </h2>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 0 0 @Model.Padding 0"></td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>
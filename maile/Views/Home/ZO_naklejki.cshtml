                @Html.Partial("modules/_Img", new Img() { Alt = "Formularz", Width = "720", Align = "center", Src = "https://image.ceneo.pl/data/article_picture/3a/72/fbbc-2b30-420a-9f3b-1908d3b2fd93_large.jpg", Href = "https://www.ceneo.pl/lp/naklejki-na-paczki" })

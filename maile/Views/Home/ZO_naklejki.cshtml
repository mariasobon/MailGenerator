        <tr>
            <td  style="padding: 0 10px;">@Html.Partial("modules/_Button", new Button() { Text = "PRZEJDŹ DO FORMULARZA", Url = "https://www.ceneo.pl/lp/naklejki-na-paczki", Bg_color = "#67AE3E", Color = "#ffffff", Align = "center" })</td>

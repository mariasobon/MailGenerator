@using maile.ViewModels.Shared
@model Img

<table cellpadding="0" cellspacing="0" style="width:100%">
    <tbody>
        <tr>
            <td align="@Model.Align" style="font-size: 0;">
                    <a href="@Model.Href" style="text-decoration: none; color: #ffffff;">
                        <img width="@Model.Width" src="@Model.Src" alt="@Model.Alt" style="max-height: @(Model.Height)px; max-width: 100%; width:@(Model.Width)px">
                    </a>
            </td>
        </tr>
        @if (Model.Desc != "")
        {
        <tr><td style="padding: 0 10px; text-align: right;"><span style="color: #777"><i>@Model.Desc</i></span></td></tr>}
    </tbody>
</table>
